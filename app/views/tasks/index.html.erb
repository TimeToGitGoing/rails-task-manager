<div class="container">
  <h1>My Tasks</h1>

  <ul class="list-unstyled">
    <% @tasks.each do |task| %>
      <li>
      <% if task.completed == true %>
      <%=   '☑' %>
      <% else %>
      <%=   '☐' %>
      <% end %>
        <%= link_to task.title, task_path(task) %>
      </li>
    <% end %>
  </ul>

  <p><%= link_to "Add a new task", new_task_path %></p>
</div>
